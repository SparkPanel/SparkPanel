# Example environment variables for SparkPanel backend
PORT=8080
NODE_ENV=development

# JWT secrets (generate secure random strings in production)
JWT_ACCESS_SECRET=changeme_access_secret
JWT_REFRESH_SECRET=changeme_refresh_secret
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# Database (Prisma)
DATABASE_URL=postgresql://user:pass@localhost:5432/sparkpanel

# Files and disk quotas
FILES_ROOT=/var/lib/sparkpanel/servers
DISK_QUOTA_ENFORCE=false
DISK_QUOTA_DEFAULT_MB=10240

# SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@sparkpanel.local

# S3 (optional)
S3_ENABLED=false
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_SSE=
S3_PATH_STYLE=false

# Logging
LOG_LEVEL=debug
